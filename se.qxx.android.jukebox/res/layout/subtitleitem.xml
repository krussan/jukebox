<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">    

    <TextView android:id="@+id/txtSubName" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/lblSubtitleName"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

     <include layout="@layout/subtitlestars" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@id/txtSubName" />        
 
	<TextView android:id="@+id/lblSubLanguage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/txtSubName"
	    android:text="@string/lblSubtitleLanguage"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
	
    
    
</RelativeLayout>