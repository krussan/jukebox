<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.qxx.android.jukebox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="se.qxx.android.jukebox.activities.FlipperListActivity"
            android:label="@string/app_name"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.qxx.android.jukebox.activities.JukeboxPreferenceActivity"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar" />
        <activity
            android:name="se.qxx.android.jukebox.activities.PlayerPickerActivity"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar" />
        <activity
            android:name="se.qxx.android.jukebox.activities.SubSelectActivity"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar" />
        <activity
            android:name="se.qxx.android.jukebox.activities.FlipperActivity"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar" />
        <activity
            android:name="se.qxx.android.jukebox.activities.NowPlayingActivity"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name="se.qxx.android.jukebox.activities.SeriesActivity"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>